<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: "Mot de passe",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Rester connectÃ©", as: :boolean if devise_mapping.rememberable?  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter", class: "btn btn-primary py-2 px-4 me-3 mb-3" %>
  </div>
<% end %>

