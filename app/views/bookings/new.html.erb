<div class="container pt-3 ">
  <div class="row justify-content-center mb-3">

<div class="card w-75 bg-white border rounded shadow-sm d-flex flex-row">

      <div class="col-4 my-2 ">
        <% if @underwear.photo.attached? %>
          <%= cl_image_tag @underwear.photo.key, class: "img-fluid w-100 h-100", crop: :fill, id:"img-show" %>
        <% end %>
      </div>

      <div class="card-body col-8 d-flex flex-column justify-content-start">
      <div class="ms-3">
        <h5 class="card-title display-5"><%= @underwear.title %></h5>

       </div>
        <div class="ms-3 padding-3">
      <h2>Complète ta réservation</h2>
      <%= simple_form_for [@underwear, @booking] do |f| %>
        <div data-controller="datepicker" data-datepicker-unavailable-dates-value= "<%= @unavailable_dates.to_json  %>">
          <%= f.input :start_date,
                    as: :string,
                    input_html: {data: {datepicker_target: "startDate"}  } %>
          <%= f.input :end_date,
                    as: :string,
                    input_html: {data: {datepicker_target: "endDate"} } %>
        </div>
        <%= f.submit "Je réserve ce slip ", class: "btn btn-primary text-white" %>
      <% end %>
      <div class="mt-3">
        <%= link_to "Retour", underwear_path(@underwear), class: "btn btn-outline-primary"  %>
        </div>
    </div>
  </div>

      </div>
    </div>










</div>
